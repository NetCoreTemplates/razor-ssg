@page
@model MyApp.Pages.Shared.MetaHeaders
@inject MarkdownBlog Blog
@{
    var doc = Model.Doc;
    var image = Model.Image ?? doc.Image;
}
@if (Blog.Config.SiteTwitter != null)
{
<meta name="twitter:site" content="@Blog.Config.SiteTwitter" />
}
@if (Model.Author?.TwitterUrl != null)
{
    var twitterUser = "@" + Model.Author.TwitterUrl.LastRightPart('/');
    <meta name="twitter:creator" content="@twitterUser" />
}
@if (doc.Summary != null)
{
    <meta name="twitter:card" content="summary" />
    <meta property="og:description" content="@doc.Summary" />
}
    <meta property="og:url" content="@Model.CanonicalUrl" />
    <meta property="og:title" content="@doc.Title" />
@if (image != null)
{
    <meta property="og:image" content="@image" />
}
